<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lv_employee_layout"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/rl_employee_image"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textSize="8pt"
    android:id="@+id/rl_employee_name"
    android:layout_marginStart="10dp"
    android:textStyle="bold"
    android:layout_toRightOf="@+id/rl_employee_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_company_name"
        android:layout_below="@+id/rl_employee_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="6pt"
        android:layout_toRightOf="@+id/rl_employee_image"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.05"
       android:background="@android:color/black"
        android:layout_below="@+id/rl_employee_image"
        />


</RelativeLayout>